<UserControl x:Class="Discussions.SourceUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		     xmlns:Custom="http://schemas.microsoft.com/surface/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="Auto"/>
    		<ColumnDefinition/>
    		<ColumnDefinition Width="Auto"/>
    	</Grid.ColumnDefinitions>
		<Label Grid.Column="1">
            <Hyperlink Click="Hyperlink_Click_1" TouchDown="Hyperlink_TouchDown_1">
                <Run x:Name="linkTarget" Text="{Binding Path=TruncatedLink}"/></Hyperlink>
		</Label>
    	<Custom:SurfaceButton x:Name="btnRemoveComment" Foreground="DarkRed" Content=" X" 
						      FontWeight="Bold" FontFamily="Segoe360" FontSize="26.667"
                              VerticalAlignment="Center" HorizontalAlignment="Center" 
                              Click="btnRemove_Click" Grid.Column="2" Background="{x:Null}"/>
        <TextBlock x:Name="txtNumber" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center"><Run x:Name="number"/><Run Text=".  "/></TextBlock>
    </Grid>
</UserControl>
