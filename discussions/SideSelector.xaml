<UserControl x:Class="Discussions.SideSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="53" d:DesignWidth="250" xmlns:my="http://schemas.microsoft.com/surface/2008" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <my:SurfaceRadioButton Content="Pros" Foreground="#FF78E58F" Height="16" Name="btnPros" Checked="btnPros_Checked" />
            <my:SurfaceRadioButton Content="Cons" Foreground="#FFF5719A" Height="16" Name="btnCons" Checked="btnCons_Checked" />
            <my:SurfaceRadioButton Content="Neutral" Foreground="#FFADA7AA" Height="16" IsChecked="True" Name="btnNeutral" Checked="btnNeutral_Checked" />
        </StackPanel>
    </Grid>
</UserControl>
