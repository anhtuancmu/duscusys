<UserControl x:Class="Discussions.ParticipantSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="http://schemas.microsoft.com/surface/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" xmlns:my="http://schemas.microsoft.com/surface/2008" xmlns:my1="clr-namespace:Discussions">
    <Grid>
        <StackPanel Name="contentAssistStack" Orientation="Vertical">
		    <StackPanel Name="stackPanel1" Orientation="Horizontal" VerticalAlignment="Top">
	            <my:SurfaceTextBox x:Name="txtBxName" Text="{Binding Name}" IsReadOnly="True" Height="23" MinWidth="100" TextChanged="txtBxName_TextChanged_1" PreviewKeyDown="txtBxName_PreviewKeyDown" />
                <my:SurfaceTextBox Height="23" x:Name="txtBxEmail" IsReadOnly="True" Width="120" Text="{Binding Email}" TextChanged="txtBxEmail_TextChanged" PreviewKeyDown="txtBxEmail_PreviewKeyDown" />
                <my:SurfaceButton Content="Select" Height="23" Name="btnSelect" Width="75" Click="btnSelect_Click" />               
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
