<UserControl x:Class="Reporter.MiniUserUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:loginEng="clr-namespace:Discussions;assembly=LoginEngine"
             mc:Ignorable="d" 		
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <loginEng:ARGBColorBrushConvertor x:Key="clrConv"/>
    </UserControl.Resources>
    
    <Grid>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="151*"/>
    		<ColumnDefinition Width="102*"/>
    		<ColumnDefinition Width="47"/>
    	</Grid.ColumnDefinitions>
    	<TextBlock Text="{Binding Name}" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    	<Rectangle Fill="{Binding Color, Converter={StaticResource clrConv}}" Height="20" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="20"/>
    </Grid>
</UserControl>
