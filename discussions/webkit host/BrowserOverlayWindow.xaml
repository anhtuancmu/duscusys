<Window x:Class="Discussions.webkit_host.BrowserOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"           
        WindowStyle="None"
        Topmost="True"
        MouseWheel="BrowserOverlayWindow_OnMouseWheel"
        Closing="BrowserOverlayWindow_OnClosing"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Title="BrowserOverlayWindow" Height="300" Width="300" Background="{x:Null}">
    <Canvas x:Name="laserScene" RenderTransformOrigin="0.5 0.5" Background="#02C9C9C9" IsHitTestVisible="False"/>
</Window>
