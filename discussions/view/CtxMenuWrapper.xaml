<ContextMenu xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Microsoft.Surface.Presentation.Controls;assembly=Microsoft.Surface.Presentation"
             x:Class="Discussions.view.CtxMenuWrapper"
             FontSize="25"
             Style="{StaticResource contextMenu}"
             Foreground="White"   
             Opened="CtxMenuWrapper_OnOpened">
    
    <MenuItem 
            Header="Cut"        
            Name="Cut"
            Click="Cut_OnClick"/>

    <MenuItem 
            Header="Copy"        
            Name="Copy"
            Click="Copy_OnClick"/>

    <MenuItem 
            Header="Paste"        
            Name="Paste"
            Click="Paste_OnClick"/>

    <!--<MenuItem 
            Header="Select All"        
            Name="SelectAll"
            Click="Select_All_OnClick"/>-->
</ContextMenu>
