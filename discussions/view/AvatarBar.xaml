                                                                                                            <Setter
                                                                                                                Property="Focusable"
                                                                                                                Value="False" />
                                                                                                            <Setter
                                                                                                                Property="IsTabStop"
                                                                                                                Value="False" />
                                                                                                            <Setter
                                                                                                                Property="Template">
                                                                                                                <Setter.Value>
                                                                                                                    <ControlTemplate
                                                                                                                        TargetType="{x:Type s:SurfaceRepeatButton}">
                                                                                                                        <Grid
                                                                                                                            Background="{TemplateBinding Background}"
                                                                                                                            Width="40">
                                                                                                                            <Rectangle
                                                                                                                                x:Name="Line"
                                                                                                                                Fill="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type s:SurfaceColors}}}"
