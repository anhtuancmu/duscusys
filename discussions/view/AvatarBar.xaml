                                                                                                                                MinWidth="2" />
                                                                                                                        </Grid>
                                                                                                                        <ControlTemplate.Triggers>
                                                                                                                            <Trigger
                                                                                                                                Property="IsEnabled"
                                                                                                                                Value="False">
