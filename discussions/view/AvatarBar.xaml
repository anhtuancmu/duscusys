                                                                                                            x:Name="DecreaseRepeat"
                                                                                                            Background="{TemplateBinding Background}"
                                                                                                            Command="ScrollBar.PageLeftCommand"
                                                                                                            VerticalAlignment="Center">
                                                                                                            <s:SurfaceRepeatButton.Style>
