<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Custom="http://schemas.microsoft.com/surface/2008" 
        xmlns:s="http://schemas.microsoft.com/surface/2008"
        x:Class="Discussions.MessageDlg"
        Title="Message" 
        WindowStartupLocation="CenterScreen" 
        Background="{DynamicResource MainBgrndRctFill}"     
        Foreground="{x:Null}"  
        WindowStyle="None"
        Visibility="Visible" 
        ShowInTaskbar="False" 
        SizeToContent="Height" 
        ResizeMode="NoResize"
        Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="70"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="message" Foreground="White" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   FontSize="18"/>
        
        <Custom:SurfaceButton x:Name="btnOk" Content="Ok" HorizontalAlignment="Center"
                              Grid.Row="1" VerticalAlignment="Center" 
                              Margin="350,10,10,10" Width="120"
                              HorizontalContentAlignment="Center" 
                              VerticalContentAlignment="Center"
                              Click="CloseClick"/>
    </Grid>
</Window>