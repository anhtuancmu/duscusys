<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Discussions.LoginDecoration"
	x:Name="UserControl"
	d:DesignWidth="642.634" d:DesignHeight="305.235">

	<Grid x:Name="LayoutRoot">
		<StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,127,25,0">
			<Label x:Name="lblName" Content="USER" FontSize="73.333"/>
			<Rectangle Height="2" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" RadiusX="3" RadiusY="3">
				<Rectangle.Fill>
					<RadialGradientBrush>
						<GradientStop Color="#CCB5F3E8" Offset="0.976"/>
						<GradientStop Color="White"/>
						<GradientStop Color="#CCB5F3E8" Offset="0.761"/>
					</RadialGradientBrush>
				</Rectangle.Fill>
			</Rectangle>
			<Label x:Name="tohoku" HorizontalAlignment="Right" VerticalAlignment="Center" Content="TOHOKU UNIVERSITY DISCUSSION SUPPORT SYSTEM" FontSize="26.667"/>
		</StackPanel>
		<Label x:Name="lblWelcome" HorizontalAlignment="Left" Margin="32.5,0,0,0" Content="Welcome" VerticalAlignment="Top" FontSize="48"/>
	</Grid>
</UserControl>