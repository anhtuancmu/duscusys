                                        <Setter Property="Opacity" TargetName="TopTick" Value="0.25"/>
                                        <Setter Property="Opacity" TargetName="BottomTick" Value="0.25"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </al:PortableWindow.Resources>

