                             Click="btnResetZoomAndPanning_Click_1" 
                             Background="#02000000"
                             HorizontalContentAlignment="Center" 
                             VerticalContentAlignment="Center"
                             d:LayoutOverrides="Width" MinWidth="20" MinHeight="20" HorizontalAlignment="Left" Padding="0">
